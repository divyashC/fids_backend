@model fids_backend.Models.FlightDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-top: 50px; margin-bottom: 30px;">Delete</h1>

<h3 style="margin-top: 50px; margin-bottom: 30px;">Are you sure you want to delete this?</h3>
<div>
    <h4>Flight Details</h4>
    <hr />
    <dl class="row" style="margin-bottom: 40px;">
        <dt class = "col-sm-2">
            Flight No.
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Airline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Airline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class = "col-sm-2">
            Origin IATA Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginIata)
        </dd>
        <dt class = "col-sm-2">
           Departure Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            Departure Terminal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTerminal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class = "col-sm-2">
            Destination IATA Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DestinationIata)
        </dd>
        <dt class = "col-sm-2">
            Arrival Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class = "col-sm-2">
            Arrival Terminal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTerminal)
        </dd>
        <dt class = "col-sm-2">
            Flighe Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightDate)
        </dd>
        <dt class = "col-sm-2">
            Flight Duration
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightDuration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
